{# templates/book/index.html.twig - SIMPLIFIED VERSION #}
{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="fw-bold text-primary"><i class="fas fa-book me-2"></i>Catalogue des livres</h1>
        <p class="text-muted">Explorez notre collection et empruntez vos favoris.</p>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {% for book in books %}
        <div class="col">
            <div class="card h-100 border-0 shadow-sm hover-shadow transition-all">
                <div class="card-header bg-light text-center py-4 text-muted">
                    <i class="fas fa-book-open fa-4x opacity-25"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold text-dark">{{ book.title }}</h5>
                    <h6 class="card-subtitle mb-3 text-primary small">
                        <i class="fas fa-pen-nib me-1"></i> {{ book.author }}
                    </h6>
                    <p class="card-text text-muted small flex-grow-1">
                        {{ book.description|length > 100 ? book.description|slice(0, 100) ~ '...' : book.description }}
                    </p>

                    <div class="mt-3">
                        {% if book.available %}
                            {% set pendingCount = pendingRequestsByBook[book.id] ?? 0 %}
                            
                            {% if pendingCount > 0 %}
                                <span class="badge bg-warning bg-opacity-10 text-warning border border-warning px-3 py-2 rounded-pill mb-3 d-inline-block">
                                    <i class="fas fa-clock me-1"></i> {{ pendingCount }} demande(s) en attente
                                </span>
                            {% else %}
                                <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill mb-3 d-inline-block">
                                    <i class="fas fa-check-circle me-1"></i> Disponible
                                </span>
                            {% endif %}
                        {% else %}
                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3 py-2 rounded-pill mb-3 d-inline-block">
                                <i class="fas fa-times-circle me-1"></i> 
                                {% if book.returnDate %}Réservé jusqu'au {{ book.returnDate|date('d/m/Y') }}
                                {% else %}Indisponible{% endif %}
                            </span>
                            <div class="small text-muted mb-2">
                                <i class="fas fa-calendar-alt me-1"></i> 
                                Retour : {{ book.returnDate ? book.returnDate|date('d/m/Y') : 'Inconnu' }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="card-footer bg-white border-top-0 pb-4 pt-0">
                    <div class="d-grid">
                        {% if book.available %}
                            {% if app.user and 'ROLE_USER' in app.user.roles %}
                                <a href="{{ path('app_loan', {id: book.id}) }}" 
                                   class="btn btn-primary fw-bold"
                                   onclick="return confirm('Demander l\\'emprunt de \\'{{ book.title }}\\' ?')">
                                    <i class="fas fa-hand-holding mb-1 me-1"></i> Emprunter
                                </a>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm">
                                    Connectez-vous pour emprunter
                                </a>
                            {% endif %}
                        {% else %}
                            <button class="btn btn-light text-muted" disabled>Non disponible</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 text-center py-5">
            <div class="alert alert-warning d-inline-block px-5 py-4 rounded-4 shadow-sm">
                <i class="fas fa-box-open fa-2x mb-3 d-block"></i>
                <strong>Aucun livre disponible pour le moment.</strong>
            </div>
        </div>
    {% endfor %}
</div>

<style>
    .hover-shadow:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; transition: all 0.3s ease; }
</style>
{% endblock %}