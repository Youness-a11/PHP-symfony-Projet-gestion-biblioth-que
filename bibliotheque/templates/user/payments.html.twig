{% extends 'base.html.twig' %}

{% block title %}Mes Paiements{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3 mb-4">
            {% include 'user/_sidebar.html.twig' %}
        </div>
        
        <div class="col-md-9">
            <h2 class="mb-4"><i class="fas fa-credit-card me-2 text-primary"></i>Mes Paiements</h2>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Historique des paiements</h5>
                </div>
                <div class="card-body">
                    {% if payments|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Livre</th>
                                        <th>Montant</th>
                                        <th>Statut</th>
                                        <th>Session Stripe</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for payment in payments %}
                                        <tr>
                                            <td>{{ payment.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>{{ payment.loan.book.title }}</td>
                                            <td>{{ payment.amount }}Dh</td>
                                            <td>
                                                <span class="badge bg-{{ payment.status == 'paid' ? 'success' : 'warning' }}">
                                                    {{ payment.status == 'paid' ? 'Payé' : 'En attente' }}
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">{{ payment.stripeSessionId|slice(0, 10) }}...</small>
                                            </td>
                                            <td>
                                                <a href="{{ path('payment_show', {'id': payment.id}) }}" 
                                                   class="btn btn-sm btn-info" title="Voir détails">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                {% if payment.status == 'pending' %}
                                                    <a href="{{ path('payment_pay', {'id': payment.id}) }}" 
                                                       class="btn btn-sm btn-success" title="Payer">
                                                        <i class="fas fa-credit-card"></i>
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                            <h5>Aucun paiement</h5>
                            <p class="text-muted">Vous n'avez pas encore effectué de paiements</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}