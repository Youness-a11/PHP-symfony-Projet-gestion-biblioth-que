{% extends 'base.html.twig' %}

{% block title %}Mes Emprunts{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3 mb-4">
            {% include 'user/_sidebar.html.twig' %}
        </div>
        
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><i class="fas fa-book me-2 text-primary"></i>Mes Emprunts</h2>
                <a href="{{ path('book_index') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Nouvel emprunt
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Historique complet</h5>
                </div>
                <div class="card-body">
                    {% if loans|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Livre</th>
                                        <th>Date demande</th>
                                        <th>Date retour</th>
                                        <th>Statut</th>
                                        <th>Paiement</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for loan in loans %}
                                        <tr>
                                            <td>
                                                <strong>{{ loan.book.title }}</strong><br>
                                                <small class="text-muted">{{ loan.book.author }}</small>
                                            </td>
                                            <td>{{ loan.loanDate|date('d/m/Y') }}</td>
                                            <td>
                                                {% if loan.returnDate %}
                                                    {{ loan.returnDate|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if loan.status == 'en_attente' %}
                                                    <span class="badge bg-warning">En attente validation</span>
                                                {% elseif loan.status == 'valide' %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% elseif loan.status == 'pending_payment' %}
                                                    <span class="badge bg-info">Paiement requis</span>
                                                {% elseif loan.status == 'refuse' %}
                                                    <span class="badge bg-danger">Refusé</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ loan.status }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if loan.payment %}
                                                    {% if loan.payment.status == 'paid' %}
                                                        <span class="badge bg-success">Payé</span>
                                                    {% elseif loan.payment.status == 'pending' %}
                                                        <span class="badge bg-warning">En attente</span>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if loan.payment and loan.payment.status == 'pending' %}
                                                    <a href="{{ path('payment_show', {'id': loan.payment.id}) }}" 
                                                       class="btn btn-primary btn-sm">
                                                        <i class="fas fa-credit-card me-1"></i> Payer
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <h5>Aucun emprunt</h5>
                            <p class="text-muted">Vous n'avez pas encore emprunté de livres</p>
                            <a href="{{ path('book_index') }}" class="btn btn-primary">
                                <i class="fas fa-book me-2"></i>Explorer le catalogue
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}