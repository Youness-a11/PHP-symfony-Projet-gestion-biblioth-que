{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Paiements{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="fas fa-credit-card me-2 text-primary"></i>Gestion des Paiements</h2>
    <a href="{{ path('app_admin') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Retour au dashboard
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0">Tous les paiements</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Utilisateur</th>
                        <th>Livre</th>
                        <th>Montant</th>
                        <th>Statut</th>
                        <th>Créé le</th>
                        <th>Payé le</th>
                    </tr>
                </thead>
                <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.id }}</td>
                            <td>{{ payment.user.email }}</td>
                            <td>
                                <strong>{{ payment.loan.book.title }}</strong><br>
                                <small class="text-muted">{{ payment.loan.book.author }}</small>
                            </td>
                            <td>{{ payment.amount }}Dh</td>
                            <td>
                                <span class="badge bg-{{ payment.status == 'paid' ? 'success' : (payment.status == 'pending' ? 'warning' : 'secondary') }}">
                                    {{ payment.status == 'paid' ? 'Payé' : (payment.status == 'pending' ? 'En attente' : payment.status) }}
                                </span>
                            </td>
                            <td>{{ payment.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ payment.paidAt ? payment.paidAt|date('d/m/Y H:i') : '-' }}</td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                                <h5>Aucun paiement</h5>
                                <p class="text-muted">Aucun paiement n'a été créé</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}