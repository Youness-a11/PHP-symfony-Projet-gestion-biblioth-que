{# templates/admin/book_form.html.twig - UPDATE THIS FILE #}
{% extends 'admin/base.html.twig' %} {# Changed from base.html.twig #}

{% block title %}{% if edit_mode is defined and edit_mode %}Modifier{% else %}Ajouter{% endif %} un livre{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                    <h1 class="h3 fw-bold text-primary">
                        <i class="fas {% if edit_mode is defined and edit_mode %}fa-edit{% else %}fa-plus-circle{% endif %} me-2"></i>
                        {% if edit_mode is defined and edit_mode %}Modifier le livre{% else %}Ajouter un livre{% endif %}
                    </h1>
                    <p class="text-muted small">Remplissez les informations ci-dessous {% if edit_mode is defined and edit_mode %}pour modifier le livre{% else %}pour enrichir le catalogue{% endif %}.</p>
                </div>
                
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        
                        {# Render form fields individually for better control #}
                        <div class="mb-3">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control rounded-3'}}) }}
                            {{ form_errors(form.title) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.author, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.author, {'attr': {'class': 'form-control rounded-3'}}) }}
                            {{ form_errors(form.author) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control rounded-3', 'rows': 5}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            {# Cancel button - goes back to books list #}
                            <a href="{{ path('admin_books') }}" class="btn btn-light text-muted">Annuler</a>
                            
                            <button type="submit" class="btn btn-success px-4 fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i> 
                                {% if edit_mode is defined and edit_mode %}Modifier{% else %}Enregistrer{% endif %}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}