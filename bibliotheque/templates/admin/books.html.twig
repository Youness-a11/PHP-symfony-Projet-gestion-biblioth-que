{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des livres{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="fas fa-book me-2 text-primary"></i>Gestion des livres</h2>
        <a href="{{ path('admin_book_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Ajouter un livre
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Liste des livres ({{ books|length }})</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Disponibilité</th>
                            <th>Date retour</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.id }}</td>
                                <td>
                                    <strong>{{ book.title }}</strong>
                                    {% if book.description %}
                                        <br><small class="text-muted">{{ book.description|slice(0, 50) }}...</small>
                                    {% endif %}
                                </td>
                                <td>{{ book.author }}</td>
                                <td>
                                    <span class="badge {% if book.available %}bg-success{% else %}bg-danger{% endif %}">
                                        {% if book.available %}Disponible{% else %}Emprunté{% endif %}
                                    </span>
                                </td>
                                <td>
                                    {% if book.returnDate %}
                                        {{ book.returnDate|date('d/m/Y') }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_book_edit', {'id': book.id}) }}" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_book_delete', {'id': book.id}) }}" 
                                              onsubmit="return confirm('Supprimer ce livre ?');" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                    <h5>Aucun livre trouvé</h5>
                                    <p class="text-muted">Commencez par ajouter un livre</p>
                                    <a href="{{ path('admin_book_new') }}" class="btn btn-primary">
                                        Ajouter un livre
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}