{# templates/payment/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Paiement - {{ payment.amount }}Dh{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-credit-card me-2"></i>Paiement de l'emprunt</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-4 text-primary">Dh{{ payment.amount }}</div>
                        <small class="text-muted">{{ payment.currency|upper }}</small>
                    </div>

                    <div class="mb-4">
                        <h5>Détails de l'emprunt:</h5>
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Livre:</span>
                                <strong>{{ payment.loan.book.title }}</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Auteur:</span>
                                <span>{{ payment.loan.book.author }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Date de demande:</span>
                                <span>{{ payment.loan.loanDate|date('d/m/Y') }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Statut:</span>
                                <span class="badge bg-{{ payment.status == 'pending' ? 'warning' : 'success' }}">
                                    {{ payment.status == 'pending' ? 'En attente' : 'Payé' }}
                                </span>
                            </li>
                        </ul>
                    </div>

                    {% if payment.status == 'pending' %}
                        <div class="d-grid gap-2">
                            <a href="{{ path('payment_pay', {'id': payment.id}) }}" 
                               class="btn btn-success btn-lg" id="pay-button">
                                <i class="fas fa-lock me-2"></i>Payer {{ payment.amount }}Dh avec Stripe
                            </a>
                            <a href="{{ path('payment_cancel_manual', {'id': payment.id}) }}" class="btn btn-outline-secondary">
                                Annuler
                            </a>
                        </div>
                        
                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Paiement sécurisé par Stripe
                            </small>
                        </div>
                    {% else %}
                        <div class="alert alert-success text-center">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h5>Paiement confirmé!</h5>
                            <p class="mb-0">Payé le {{ payment.paidAt|date('d/m/Y à H:i') }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}