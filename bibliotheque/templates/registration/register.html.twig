{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-lg rounded-4">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-user-plus fa-2x"></i>
                    </div>
                    <h1 class="h3 fw-bold">Inscription</h1>
                    <p class="text-muted small">Créez votre compte bibliothèque</p>
                </div>

                {{ form_start(form) }}
                    {# Email field with error display #}
                    <div class="form-floating mb-3">
                        {{ form_widget(form.email, {
                            'attr': {
                                'class': 'form-control ' ~ (form.email.vars.errors|length ? 'is-invalid' : ''),
                                'placeholder': 'nom@exemple.com'
                            }
                        }) }}
                        {{ form_label(form.email) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    {# Password field #}
                    <div class="form-floating mb-3">
                        {{ form_widget(form.password.first, {
                            'attr': {
                                'class': 'form-control ' ~ (form.password.first.vars.errors|length ? 'is-invalid' : ''),
                                'placeholder': 'Mot de passe'
                            }
                        }) }}
                        {{ form_label(form.password.first) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.password.first) }}
                        </div>
                    </div>

                    {# Repeat password field #}
                    <div class="form-floating mb-4">
                        {{ form_widget(form.password.second, {
                            'attr': {
                                'class': 'form-control ' ~ (form.password.second.vars.errors|length ? 'is-invalid' : ''),
                                'placeholder': 'Répétez le mot de passe'
                            }
                        }) }}
                        {{ form_label(form.password.second) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.password.second) }}
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                            S'inscrire <i class="fas fa-user-plus ms-2"></i>
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
            
            <div class="card-footer text-center bg-light py-3 border-0 rounded-bottom-4">
                <small class="text-muted">
                    Déjà un compte ? 
                    <a href="{{ path('app_login') }}" class="text-primary fw-bold text-decoration-none">Se connecter</a>
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}